{
  "meta": {
    "configVersion": "1.0",
    "nodeId": "asr-node",
    "displayName": "ASR语音识别节点",
    "description": "支持多语言的语音转文字识别",
    "author": "workflow-system",
    "version": "1.0.0",
    "tags": ["asr", "speech", "transcribe"],
    "sourceType": "json"
  },
  "node": {
    "type": "asr-node", 
    "label": "语音识别",
    "icon": "🎙️",
    "description": "将音频文件转换为文字",
    "category": "ai",
    "theme": "green"
  },
  "fields": [
    {
      "name": "language",
      "type": "text",
      "uiType": "select",
      "label": "识别语言",
      "defaultValue": "zh",
      "required": false,
      "options": [
        { "value": "zh", "label": "中文" },
        { "value": "en", "label": "英语" },
        { "value": "ja", "label": "日语" },
        { "value": "ko", "label": "韩语" }
      ],
      "description": "选择音频内容的语言"
    },
    {
      "name": "format",
      "type": "text", 
      "uiType": "select",
      "label": "输出格式",
      "defaultValue": "txt",
      "required": false,
      "options": [
        { "value": "txt", "label": "纯文本格式" },
        { "value": "json", "label": "详细JSON格式" }
      ],
      "description": "选择识别结果的输出格式"
    }
  ],
  "data": {
    "defaultData": {
      "language": "zh",
      "format": "txt"
    },
    "validation": {
      "required": []
    }
  },
  "executorConfig": {
    "handler": "asr_transcribe_handler",
    "endpoint": "http://localhost:8002/transcribe",
    "method": "POST",
    "contentType": "multipart/form-data"
  },
  "components": {
    "main": {
      "type": "DynamicNode"
    },
    "config": {
      "type": "DynamicConfigPanel"
    }
  }
}
